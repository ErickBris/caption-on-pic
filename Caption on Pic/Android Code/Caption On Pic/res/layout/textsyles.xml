<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/second_back"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/textbottm_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/gallery_strip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/font_style_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fontstyle_but" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="center"
            android:orientation="vertical" >

            <Button
                android:id="@+id/font_color_but"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/fontcolor_but" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textbottm_lay1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textbottm_lay"
        android:layout_marginTop="15.0dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/fint_style_lay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Gallery
                android:id="@+id/font_style_ga"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:spacing="5.0dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/font_size_lay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Gallery
                android:id="@+id/font_size_ga"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:spacing="5.0dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/top_lay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="right" >

        <Button
            android:id="@+id/text_done_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/donefirst_but" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/toplayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textbottm_lay1"
        android:layout_below="@+id/top_lay"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/editlay"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_back" >

            <EditText
                android:id="@+id/text_edt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:ems="10"
                android:gravity="top"
                android:maxLength="25"
                android:textSize="30.0dip" >

                <requestFocus />
            </EditText>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>